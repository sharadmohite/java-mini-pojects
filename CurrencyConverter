import java.util.*;
class ConcurrencyConverter 
{
	public static void main(String[] args) 
	{
		Scanner sc=new Scanner(System.in);
		Map<String,Double> exchangeRates=new HashMap<>();
		exchangeRates.put("USD_TO_INR", 83.10);
        exchangeRates.put("EUR_TO_INR", 90.20);
        exchangeRates.put("INR_TO_USD", 0.012);
        exchangeRates.put("INR_TO_EUR", 0.011);

		System.out.print("Enter source currency (e.g., USD): ");
        String fromCurrency = sc.next().toUpperCase();

        System.out.print("Enter target currency (e.g., INR): ");
        String toCurrency = sc.next().toUpperCase();

        System.out.print("Enter amount to convert: ");
        double amount = sc.nextDouble();

		String conversionKey = fromCurrency + "_TO_" + toCurrency;
        Double rate = exchangeRates.get(conversionKey);

        if (rate != null) {
        double convertedAmount = amount * rate;
        System.out.println("Converted Amount: " + convertedAmount + " " + toCurrency);
      } else {
             System.out.println("Sorry, conversion rate not available for " + conversionKey);
}


	}
}
