//A stopwatch is a device or tool used to measure the amount of time that elapses between its activation and deactivationâ€”essentially tracking time intervals with precision.

import java.util.Scanner;
class Test
{
	public static void main(String[] args) throws InterruptedException
	{
		int duration=10;
		
		System.out.println("stopwatched started");
		for(int i=1;i<=duration;i++)
		{
			System.out.println("time elapsed "+i+" time in seconds");
			Thread.sleep(1000);
		}
		System.out.println("stopwatched stopped");
		}
}
